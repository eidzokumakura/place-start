<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/logo_picture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:layout_marginTop="5dp"
            android:onClick="ToSite"/>
        <TextView
            android:id="@+id/choose_services_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Отметьте интересующие Вас услуги"
            android:layout_marginBottom="15dp"
            android:textFontWeight="700"
            android:textSize="14pt"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <CheckBox
                android:id="@+id/create_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Создание сайта"
                android:textSize="12pt"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <CheckBox
                android:id="@+id/context_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Контекстная реклама"
                android:textSize="12pt"/>
            <CheckBox
                android:id="@+id/smm_and_targeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SMM и таргетинг"
                android:textSize="12pt"/>

            <CheckBox
                android:id="@+id/seo_promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEO-продвижение"
                android:textSize="12pt"/>
            <CheckBox
                android:id="@+id/technical_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Техническое\nсопровождение"
                android:textSize="12pt"/>

            <CheckBox
                android:id="@+id/imp_and_refine_crm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Внедрение и\nдоработка CRM"
                android:textSize="12pt"/>
            <CheckBox
                android:id="@+id/logos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Логотипы и \nфирменный стиль"
                android:textSize="12pt"/>

            <CheckBox
                android:id="@+id/polygraphy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Полиграфия"
                android:textSize="12pt"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/context_ad_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-black"
                android:text="Контекстная реклама"
                android:gravity="center"
                android:textSize="14pt"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <CheckBox
                    android:id="@+id/yandex_direct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Яндекс Директ"
                    android:textSize="12pt"/>

                <CheckBox
                    android:id="@+id/google_ads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google Ads"
                    android:textSize="12pt"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/smm_and_targeting_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-black"
                android:text="SMM и таргетинг"
                android:textSize="14pt"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/vkontakte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ВКонтакте"
                    android:textSize="12pt" />

                <CheckBox
                    android:id="@+id/telegram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telegram"
                    android:textSize="12pt"/>
            </LinearLayout>
            <TextView
                android:id="@+id/posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Постов в неделю: 1"
                android:textSize="12pt"/>
            <SeekBar
                android:id="@+id/posts_per_week"
                android:layout_marginTop="25dp"
                android:layout_width="250dp"
                android:max="7"
                android:min="1"
                android:progress="1"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="@color/black"
                android:progressTint="@color/brand"
                android:thumbTint="@color/brand"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/seo_promotion_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-black"
                android:text="SEO-продвижение"
                android:textSize="14pt"/>

            <RadioGroup
                android:id="@+id/seo_radios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/year1seo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 год"
                    android:textSize="12pt"/>

                <RadioButton
                    android:id="@+id/year2seo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 года"
                    android:textSize="12pt"/>

                <RadioButton
                    android:id="@+id/laterseo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Обговорить отдельно"
                    android:textSize="12pt"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/technical_support_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-black"
                android:text="Техническое сопровождение"
                android:gravity="center"
                android:textSize="14pt"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <CheckBox
                    android:id="@+id/prompt_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Оперативное\nустранение ошибок"
                    android:textSize="12pt"/>

                <CheckBox
                    android:id="@+id/engine_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Обновление движка"
                    android:textSize="12pt"/>

                <CheckBox
                    android:id="@+id/data_backup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Резервное\nкопирование \nданных"
                    android:textSize="12pt"/>

                <CheckBox
                    android:id="@+id/check_domens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Проверка и\nпродление\nсроков действия\nдоменов"
                    android:textSize="12pt"/>

                <CheckBox
                    android:id="@+id/ssl_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Контроль срока\nдействия\nSSL-сертификатов"
                    android:textSize="12pt"/>

                <CheckBox
                    android:id="@+id/check_viruses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Проверка сайта\nна вирусы"
                    android:textSize="12pt"/>

                <CheckBox
                    android:id="@+id/web_server_diagnostic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Диагностика\nweb-сервера"
                    android:textSize="12pt"/>

                <CheckBox
                    android:id="@+id/hosting_monitoring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Мониторинг и\nпродление\nхостинга"
                    android:textSize="12pt"/>

                <CheckBox
                    android:id="@+id/compatibility_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Контроль за \nсовместимостью\nсайта"
                    android:textSize="12pt"/>

                <CheckBox
                    android:id="@+id/image_size_optimization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Оптимизация размера\nизображений"
                    android:textSize="12pt"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/logos_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-black"
                android:text="Логотип\nФирменный стиль"
                android:gravity="center"
                android:textSize="14pt"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <CheckBox
                    android:id="@+id/brand_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Фирменный знак"
                    android:textSize="12pt"/>

                <CheckBox
                    android:id="@+id/brand_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Торговая марка"
                    android:textSize="12pt"/>

                <CheckBox
                    android:id="@+id/slogan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Слоган"
                    android:textSize="12pt"/>

                <CheckBox
                    android:id="@+id/brand_character"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Фирменный персонаж"
                    android:textSize="12pt"/>

                <CheckBox
                    android:id="@+id/style_elements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Стилеобразующие\nэлементы"
                    android:textSize="12pt"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/to_tariff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Узнать тариф"
            android:textColor="@color/black"
            android:background="@drawable/background_gradient"
            android:backgroundTint="@null"
            android:layout_marginTop="25dp"
            android:onClick="getResult"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© Конструктор тарифа Плейсстарт.\nВсе права защищены. Подушко."
            android:textSize="8pt"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"></TextView>
    </LinearLayout>
</ScrollView>